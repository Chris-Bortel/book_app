<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ( '../layout/head.ejs' ) %>
 
  </head>
  <body>
    <header> 
      <%- include ( '../layout/header.ejs' ) %>
      <h1> <%= rows %> Saved Books</h1>
    </header>
    <section>

      <% array.forEach( book => { %>
        <div>
          <img src=  "<%= book.image_url %>" alt="">
          <h2> <%= book.title %> </h2>
          <h3> <%= book.author %> </h3>
          <a href="/books/<%= book.id %>">View Detail</a>
          </div>
      <% }) %>

    </section>
    
  </body>
</html>
