<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ( '../../layout/head' ) %>
  </head>
  <body>
    
    <header>
      <%- include('../../layout/header') %>
    </header>  
    
    <h1 class="sub-header">Search Results</h1>
    <section>

      <% data.forEach( book => { %>

      <div class="book-container">
      <img src=  "<%= book.image_url %>" alt="">
      <h2> <%= book.title %> </h2>
      <h3 class="author"> <%= book.author %> </h3>
     
      <article>
        <p class="desription"> <%= book.description %> </p>
      </article>
      </div>
      <% }) %>

    </section>
    
  </body>
</html>
